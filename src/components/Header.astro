---
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 glass border-b border-white/10">
  <nav class="max-w-6xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <a href="/" class="text-xl font-bold text-white hover:text-nextsite-accent-blue transition-colors duration-200 flex items-center gap-2">
        <div class="w-8 h-8 bg-nextsite-accent rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-sm">JG</span>
        </div>
        Jonathan Guarirapa
      </a>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href="/" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/' 
              ? 'text-nextsite-accent-blue border-b-2 border-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Inicio
        </a>
        <a 
          href="/servicios" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/servicios' 
              ? 'text-nextsite-accent-blue border-b-2 border-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Servicios
        </a>
        <a 
          href="/proyectos" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/proyectos' 
              ? 'text-nextsite-accent-blue border-b-2 border-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Proyectos
        </a>
        <a 
          href="/sobre-mi" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/sobre-mi' 
              ? 'text-nextsite-accent-blue border-b-2 border-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Sobre Mí
        </a>
        <a 
          href="/contacto" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/contacto' 
              ? 'text-nextsite-accent-blue border-b-2 border-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Contacto
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-300 hover:text-white focus:outline-none focus:ring-2 focus:ring-nextsite-accent-blue rounded-lg"
        aria-label="Abrir menú de navegación"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-white/10">
      <div class="flex flex-col space-y-4 pt-4">
        <a 
          href="/" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/' 
              ? 'text-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Inicio
        </a>
        <a 
          href="/servicios" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/servicios' 
              ? 'text-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Servicios
        </a>
        <a 
          href="/proyectos" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/proyectos' 
              ? 'text-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Proyectos
        </a>
        <a 
          href="/sobre-mi" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/sobre-mi' 
              ? 'text-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Sobre Mí
        </a>
        <a 
          href="/contacto" 
          class={`text-sm font-medium transition-colors duration-200 ${
            currentPath === '/contacto' 
              ? 'text-nextsite-accent-blue' 
              : 'text-gray-300 hover:text-white'
          }`}
        >
          Contacto
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const isHidden = mobileMenu.classList.contains('hidden');
        
        if (isHidden) {
          mobileMenu.classList.remove('hidden');
          mobileMenuButton.setAttribute('aria-label', 'Cerrar menú de navegación');
          // Change icon to X
          mobileMenuButton.innerHTML = `
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          `;
        } else {
          mobileMenu.classList.add('hidden');
          mobileMenuButton.setAttribute('aria-label', 'Abrir menú de navegación');
          // Change icon back to hamburger
          mobileMenuButton.innerHTML = `
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          `;
        }
      });
    }
  });
</script>



